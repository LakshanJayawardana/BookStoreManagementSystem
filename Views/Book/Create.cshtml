
@using WebApplication1.ViewModels
@model CreateBookViewModel
@{
    ViewData["Title"] = "Add new book";
}

<h2>Books Page</h2>
<br>
<form asp-action="CreateBook" asp-controller="Book" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">

                <label asp-for="Title">Book Title</label>
                <input asp-for="Title" type="text" class="form-control" required>
            </div>
            <div class="form-group">
                <span asp-validation-for="Title" class="text-danger"></span>
                <label>Publisher Id</label>
                <input asp-for="PublisherId" type="text" class="form-control" required>

            </div>
            <div class="form-group">
                <label>Language Id</label>
                <input asp-for="LanguageId" type="text" class="form-control" required>

            </div>
            <div class="form-group">
                <label>ISBN</label>
                <input asp-for="ISBN" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label>Number Of Pages</label>
                <input asp-for="NumberOfPages" type="text" class="form-control">

            </div>
            <div class="form-group">
                <label>Publication Date</label>
                <input asp-for="PublicationDate" type="text" class="form-control">

            </div>
            <div class="form-group">
                <label>Image</label>
                <input asp-for="ImageUrl" type="file" class="form-control">
                <span asp-validation-for="ImageUrl" class="text-danger"></span>


            </div>
            <div class="text-danger">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>

            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Create Book</button>
                    <a asp-controller="Book" asp-action="AllBookList" class="btn btn-secondary">Go back</a>
                </center>
            </div>
        </div>
    </div>
</form>
